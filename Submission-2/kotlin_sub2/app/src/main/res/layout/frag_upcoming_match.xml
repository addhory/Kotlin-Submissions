<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Spinner
            android:id="@+id/spinnerMatchesUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_margin_8"
            android:paddingRight="@dimen/small_margin_8">
    </Spinner>

    <ProgressBar
            android:id="@+id/mainProgressBarUp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"/>

    <android.support.v7.widget.RecyclerView
            android:layout_below="@id/spinnerMatchesUp"
            android:layout_marginTop="@dimen/small_margin_8"
            android:id="@+id/rvFootballUpcoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>