<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.myasus.footballKADE">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
            android:name=".feature.mainactivity.MainActivity"
           android:theme="@style/AppTheme.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".feature.searchmatch.SearchMatchActivity"
            android:launchMode="singleTop" />
        <activity android:name=".feature.detailmatch.DetailActivity"
            android:launchMode="singleTop" />
        <activity android:name=".feature.detailteam.DetailTeamActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop" />
        <activity android:name=".feature.detailplayer.DetailPlayerActivity"
            android:launchMode="singleTop" />
    </application>

</manifest>